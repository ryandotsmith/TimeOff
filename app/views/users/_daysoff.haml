.block
  .block_head
    .bheadl
    .bheadr
    %h2 History

  .block_content
    %table
      %thead
        %tr
          %th submitted on
          %th time off requested
          %th notes
          %th status
          %th delete
      %tbody
        - @user.daysoff.each do |dayoff|
          %tr
            %td= dayoff.created_at 
            %td= dayoff.get_length
            %td= dayoff.description
            %td= dayoff.status
            %td= link_to 'delete', dayoff, :method => 'delete'
  .bendl
  .bendr
