- content_for :left_head do
  %h2 Sign Up for a free unlimited trial
  %ul
    %li= link_to "&larr; main page", root_url

- content_for :right_head do
  %h2 Pricing
  %ul
    %li= link_to "&larr; main page", root_url


- content_for :right_body do
  .message.success
    Free Unlimited Trial
  %ul
    %li 
      %strong 0-5 users 
      Free
    %li
      %strong 6-25 users
      $24 per month
    %li
      %strong 26-50 users
      $49 per month
    %li 
      %strong more than 50 useres
      $140 per month

    Everything is negotiable. Email me with any questions.
    %a{:href => 'mailto:ryan@wonderset.com'} ryan@wonderset.com

- content_for :left_body do
  - form_for @account do |form|
    = form.error_messages
    %p
      = form.label :company_name, "Company Name"
      %br
      = form.text_field :company_name, :class => 'text small'

    - form.fields_for :users do |user|

      %p
        = user.label :first_name, "First Name"
        %br
        = user.text_field :first_name , :class => 'text small'

      %p
        = user.label :last_name, "Last Name"
        %br
        = user.text_field :last_name, :class => 'text small'

      %p
        = user.label :email, "Email"
        %br
        = user.text_field :email, :class => 'text small'

      %p
        = user.label :password, "Password"
        %br
        = user.password_field :password , :class => 'text small'

      %p
        = user.label :password_confirmation, "Password Confirmation"
        %br
        = user.password_field :password_confirmation, :class => 'text small'

    %p
      = form.submit 'submit', :class => 'submit small'
