- products.each do |product|
  - form_for account, :url => account_subscription_plan_path(account), :html => { :class => 'edit_subscription_plan' } do |form|
    = form.hidden_field :product_handle, :value => product.handle
    - if product.handle == account.product_handle
      = form.submit product.name + " selected"
    - else
      = form.submit product.name

