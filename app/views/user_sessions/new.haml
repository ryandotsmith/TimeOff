- form_for @user_session, :url => user_session_url do |session|

  %p= session.error_messages :class => 'message errormsg'

  %p= link_to 'sign in with google', new_user_session_url(:authenticate_with_google => true)

  %p
    = session.label :email
    %br
    = session.text_field :email, :class => 'text'
  %p
    = session.label :password
    %br
    = session.password_field :password, :class => 'text'
  %p
    = session.submit 'sign in', :class => 'submit'
%hr
%h4 Forgot Your Passowrd?
%h5
  = link_to "reset", new_password_reset_path
  your password. 

%hr
%h4 Don't Have An Account?
%h5
  = link_to "create", new_account_path
  one now!

